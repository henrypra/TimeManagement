<Window x:Class="TimeManagement.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagement"
        mc:Ignorable="d"
       Name="Form"
        ResizeMode="NoResize"
        Title="Zeitmanagement von Henry Pratsch" Height="660" Width="1005">
    <Grid Name="gridMain" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="btn_back"  Click="Button_Click"  Content="BACK"  HorizontalAlignment="Left"  FontSize="24" Margin="32,28,0,0" VerticalAlignment="Top" Width="130" Height="68"/>
        <Label Name ="project_title" Content="Projekt" IsHitTestVisible="false" HorizontalContentAlignment="Center" Margin="10,28,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3"  FontSize="48" Height="68"/>
        <Label Name ="project_time" Content="" FontSize="54" HorizontalContentAlignment="Center" Margin="0,2,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="1.395,0.519" Width="999" Grid.ColumnSpan="3" Height="88"/>
        <Label Content="___________________________________________" FontSize="54" HorizontalContentAlignment="Center" Margin="0,2,-10,59" Grid.Row="1" VerticalContentAlignment="Center" RenderTransformOrigin="1.395,0.519" Grid.ColumnSpan="3"/>
        <Label Content="Aktuell:" HorizontalContentAlignment="Center" FontSize="37" Margin="183,143,81,0" Grid.Row="1" VerticalAlignment="Top" Height="64" Grid.ColumnSpan="2"/>
        <Label Content="0h  0min  0s" Name="timerLabel"  HorizontalContentAlignment="Center" FontSize="22" Margin="183,15,81,0" Grid.Row="2" VerticalAlignment="Top" Height="64" Grid.ColumnSpan="2"/>
        <Button Name="btn_start" Click="Button_Click" Content="START" Grid.Column="1" HorizontalAlignment="Left" Height="90" Margin="257,143,0,0" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Top" Width="90" Grid.ColumnSpan="2"/>
        <Button Name="btn_pause" Click="Button_Click" Content="PAUSE" Grid.Column="2" HorizontalAlignment="Left" Height="90" Margin="33,143,0,0" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.15,0.556"/>
        <Button Name="btn_save" Click="Button_Click" Content="SPEICHERN" Grid.Column="1" HorizontalAlignment="Left" Height="90" Margin="257,47,0,0" Grid.Row="2" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.15,0.556" Grid.ColumnSpan="2"/>
        <Button Name="btn_clear" Click="Button_Click" Content="CLEAR" Grid.Column="2" HorizontalAlignment="Left" Height="90" Margin="33,47,0,0" Grid.Row="2" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.15,0.556"/>


    </Grid>
</Window>
